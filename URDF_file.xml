<?xml version="1.0"?>
<robot name="three_limb_robotic_arm">

   <!-- Base Link -->
   <link name="base_link">
      <visual>
         <origin xyz="0 0 0" rpy="0 0 0"/>
         <geometry>
            <mesh filename="STL_assembly/robot assembly - base 2-1"/>
         </geometry>
         <material name="blue">
            <color rgba="0.0 0.0 1.0 1.0"/>
         </material>
      </visual>
      <collision>
         <origin xyz="0 0 0" rpy="0 0 0"/>
         <geometry>
            <mesh filename="STL_assembly/robot assembly - base 2-1"/>
         </geometry>
      </collision>
   </link>

   <!-- First Limb -->
   <link name="limb_1">
      <visual>
         <origin xyz="0 0 0.1" rpy="0 0 0"/>
         <geometry>
            <mesh filename="STL_assembly/robot assembly - arm 1-1"/>
         </geometry>
         <material name="red">
            <color rgba="1.0 0.0 0.0 1.0"/>
         </material>
      </visual>
      <collision>
         <origin xyz="0 0 0.1" rpy="0 0 0"/>
         <geometry>
            <mesh filename="STL_assembly/robot assembly - arm 1-1"/>
         </geometry>
      </collision>
   </link>

   <!-- Second Limb -->
   <link name="limb_2">
      <visual>
         <origin xyz="0 0 0.2" rpy="0 0 0"/>
         <geometry>
            <mesh filename="STL_assembly/robot assembly - arm 2-1"/>
         </geometry>
         <material name="green">
            <color rgba="0.0 1.0 0.0 1.0"/>
         </material>
      </visual>
      <collision>
         <origin xyz="0 0 0.2" rpy="0 0 0"/>
         <geometry>
            <mesh filename="STL_assembly/robot assembly - arm 2-1"/>
         </geometry>
      </collision>
   </link>

   <!-- Third Limb (Connects to Claw) -->
   <link name="limb_3">
      <visual>
         <origin xyz="0 0 0.3" rpy="0 0 0"/>
         <geometry>
            <mesh filename="STL_assembly/robot assembly - arm 3-1"/>
         </geometry>
         <material name="yellow">
            <color rgba="1.0 1.0 0.0 1.0"/>
         </material>
      </visual>
      <collision>
         <origin xyz="0 0 0.3" rpy="0 0 0"/>
         <geometry>
            <mesh filename="STL_assembly/robot assembly - arm 3-1"/>
         </geometry>
      </collision>
   </link>

   <!-- Claw Link -->
   <link name="claw">
      <visual>
         <origin xyz="0 0 0.4" rpy="0 0 0"/>
         <geometry>
            <mesh filename="STL_assembly/robot assembly - middle-1"/>
         </geometry>
         <material name="gray">
            <color rgba="0.5 0.5 0.5 1.0"/>
         </material>
      </visual>
      <collision>
         <origin xyz="0 0 0.4" rpy="0 0 0"/>
         <geometry>
            <mesh filename="STL_assembly/robot assembly - middle-1"/>
         </geometry>
      </collision>
   </link>

   <!-- Joint 1: Base rotation (Revolute) -->
   <joint name="base_to_limb_1" type="revolute">
      <parent link="base_link"/>
      <child link="limb_1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="-3.14" upper="3.14" effort="20" velocity="1"/>
   </joint>

   <!-- Joint 2: Limb 1 to Limb 2 (Prismatic) -->
   <joint name="limb_1_to_limb_2" type="prismatic">
      <parent link="limb_1"/>
      <child link="limb_2"/>
      <origin xyz="0 0 0.2" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="-1.57" upper="1.57" effort="10" velocity="1"/>
   </joint>

   <!-- Joint 3: Limb 2 to Limb 3 (Prismatic) -->
   <joint name="limb_2_to_limb_3" type="prismatic">
      <parent link="limb_2"/>
      <child link="limb_3"/>
      <origin xyz="0 0 0.3" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="-1.57" upper="1.57" effort="10" velocity="1"/>
   </joint>

   <!-- Joint 4: Limb 3 to Claw (Fixed) -->
   <joint name="limb_3_to_claw" type="fixed">
      <parent link="limb_3"/>
      <child link="claw"/>
      <origin xyz="0 0 0.4" rpy="0 0 0"/>
   </joint>

</robot>
